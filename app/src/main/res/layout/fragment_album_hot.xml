<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_fargment_album_hot"
    >
    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/relativealbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:text="@string/album_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewxemthemAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textviewxemthemAlbum"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_alignParentRight="true"
            android:text="@string/more_album"/>


    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relativealbum"
        android:id="@+id/recycleviewAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>