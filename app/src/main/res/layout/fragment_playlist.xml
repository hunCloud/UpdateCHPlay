<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#673AB7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/fragment_playlist"
    >
    <TextView
        android:textColor="@color/textviewtitleplaylist"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textviewtitleplaylist"
        android:text="@string/hot_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:layout_below="@id/textviewtitleplaylist"
        android:layout_marginTop="-11dp"></ListView>

    <TextView

        android:id="@+id/textviewviewmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/listviewplaylist"
        android:layout_marginTop="-15dp"
        android:background="@color/bg_textviewviewmoreplaylist"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="@string/more_playlist"
        android:textColor="@color/textviewviewmoreplaylist"
        android:textSize="14sp" />

</RelativeLayout>