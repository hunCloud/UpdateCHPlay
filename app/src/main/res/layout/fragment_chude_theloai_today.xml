<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@color/fragment_chude_theloai"
        android:id="@+id/relativechudetheloai">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewtitle"
            android:textColor="@color/textviewtitle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/subject_category"/>
        <TextView
            android:id="@+id/textviewxemthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/textviewxemthem"
            android:textSize="18sp"
            android:text="@string/view_more"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_below="@id/relativechudetheloai"
        android:id="@+id/horizontalScrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</RelativeLayout>